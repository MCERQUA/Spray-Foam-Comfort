---
import { Leaf, DollarSign, TrendingDown, Home } from 'lucide-react';

const benefits = [
  {
    icon: DollarSign,
    title: "Save Up to 50%",
    subtitle: "On Energy Bills",
    description: "Reduce heating and cooling costs with superior insulation that pays for itself"
  },
  {
    icon: Leaf,
    title: "Eco-Friendly",
    subtitle: "Reduce Carbon Footprint",
    description: "Lower energy consumption means less environmental impact for future generations"
  },
  {
    icon: TrendingDown,
    title: "Less Waste",
    subtitle: "Sustainable Solution",
    description: "Spray foam lasts decades, reducing replacement waste and material consumption"
  },
  {
    icon: Home,
    title: "Increase Value",
    subtitle: "Home Investment",
    description: "Energy-efficient homes sell faster and for higher prices in today's market"
  }
];
---

<section class="relative py-20 overflow-visible">
  <!-- Background with subtle pattern -->
  <div class="absolute inset-0 bg-sage-mist/10"></div>
  
  <!-- Decorative elements -->
  <div class="absolute top-0 left-0 w-96 h-96 bg-sage-mist/20 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute bottom-0 right-0 w-96 h-96 bg-sage-mist/20 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>
  
  <div class="relative container-padding max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12 md:mb-16">
      <div class="inline-flex items-center gap-2 mb-4">
        <div class="w-12 h-[1px] bg-sage-mist"></div>
        <span class="text-sage-mist font-medium uppercase tracking-wider text-sm">Sustainability & Savings</span>
        <div class="w-12 h-[1px] bg-sage-mist"></div>
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl font-bold text-espresso mb-4">
        Good for Your Wallet.<br class="hidden md:block" />
        <span class="text-sage-mist">Great for the Planet.</span>
      </h2>
      <p class="text-base sm:text-lg text-espresso/70 max-w-2xl mx-auto px-4">
        Modern spray foam insulation isn't just about comfortâ€”it's an investment in your future and our environment.
      </p>
    </div>

    <!-- Benefits Grid with floating stats -->
    <div class="relative">
      <!-- Mobile floating stat - top right -->
      <div class="absolute -top-4 -right-2 sm:-right-4 z-10 lg:hidden">
        <div class="bg-white rounded-2xl shadow-xl px-3 py-2 sm:px-4 sm:py-3 transform rotate-3">
          <div class="text-xl sm:text-2xl font-bold text-sage-mist">50%</div>
          <div class="text-xs text-espresso/60">Energy Saved</div>
        </div>
      </div>
      
      <!-- Mobile floating stat - bottom left -->
      <div class="absolute -bottom-4 -left-2 sm:-left-4 z-10 lg:hidden">
        <div class="bg-white rounded-2xl shadow-xl px-3 py-2 sm:px-4 sm:py-3 transform -rotate-6">
          <div class="text-xl sm:text-2xl font-bold text-sage-mist">30%</div>
          <div class="text-xs text-espresso/60">Carbon Reduced</div>
        </div>
      </div>

      <!-- Benefits Grid -->
      <div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4 md:gap-6 mb-16">
        {benefits.map((benefit, index) => (
          <div class="group relative">
            <!-- Card - smaller on mobile -->
            <div class="relative bg-white rounded-xl sm:rounded-2xl p-4 sm:p-5 md:p-6 shadow-sm border border-sage-mist/20 overflow-hidden transition-all duration-300 hover:shadow-xl hover:border-sage-mist/40">
              <!-- Hover gradient -->
              <div class="absolute inset-0 bg-gradient-to-br from-sage-mist/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              
              <!-- Icon - smaller on mobile -->
              <div class="relative mb-3 md:mb-4">
                <div class="w-10 h-10 sm:w-12 sm:h-12 md:w-14 md:h-14 bg-sage-mist/20 rounded-lg sm:rounded-xl flex items-center justify-center group-hover:bg-sage-mist/30 transition-colors duration-300">
                  <benefit.icon className="w-5 h-5 sm:w-6 sm:h-6 md:w-7 md:h-7 text-sage-mist" />
                </div>
              </div>
              
              <!-- Content - more compact on mobile -->
              <div class="relative">
                <h3 class="text-base sm:text-lg md:text-xl font-bold text-espresso mb-1">{benefit.title}</h3>
                <p class="text-xs sm:text-sm font-medium text-sage-mist mb-2 md:mb-3">{benefit.subtitle}</p>
                <p class="text-xs sm:text-sm text-espresso/60 leading-relaxed hidden sm:block">{benefit.description}</p>
              </div>
              
              <!-- Decorative corner accent -->
              <div class="absolute -bottom-2 -right-2 w-12 sm:w-16 h-12 sm:h-16 bg-sage-mist/10 rounded-tl-3xl"></div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- ROI Calculator CTA -->
    <div class="relative">
      <div class="bg-gradient-to-r from-sage-mist/20 via-sage-mist/10 to-sage-mist/20 rounded-3xl p-6 sm:p-8 md:p-12">
        <div class="max-w-3xl mx-auto text-center">
          <div class="inline-flex items-center gap-2 mb-4 px-3 sm:px-4 py-2 bg-sage-mist/20 rounded-full">
            <TrendingDown className="w-4 h-4 sm:w-5 sm:h-5 text-sage-mist" />
            <span class="text-sage-mist font-medium text-xs sm:text-sm">Average ROI: 2-5 Years</span>
          </div>
          <h3 class="text-xl sm:text-2xl md:text-3xl font-bold text-espresso mb-3 sm:mb-4">
            See How Much You Could Save
          </h3>
          <p class="text-sm sm:text-base md:text-lg text-espresso/70 mb-6 sm:mb-8 max-w-xl mx-auto px-4">
            Every home is different. Get a personalized estimate of your energy savings and environmental impact.
          </p>
          <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center">
            <a 
              href="#contact-form" 
              class="inline-flex items-center justify-center px-6 sm:px-8 py-2.5 sm:py-3 bg-sage-mist text-white font-medium rounded-full hover:bg-sage-mist/90 transition-all duration-300 shadow-lg hover:shadow-xl text-sm sm:text-base"
            >
              Calculate My Savings
            </a>
            <a 
              href="#contact-form" 
              class="inline-flex items-center justify-center px-6 sm:px-8 py-2.5 sm:py-3 bg-white text-sage-mist font-medium rounded-full hover:bg-soft-white border-2 border-sage-mist/30 transition-all duration-300 text-sm sm:text-base"
            >
              Learn More
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Desktop floating stats - positioned on sides -->
    <div class="absolute right-0 xl:-right-4 top-1/3 hidden lg:block">
      <div class="bg-white rounded-2xl shadow-xl p-4 transform rotate-3 hover:rotate-0 transition-transform duration-300">
        <div class="text-3xl font-bold text-sage-mist">50%</div>
        <div class="text-sm text-espresso/60">Energy Saved</div>
      </div>
    </div>
    <div class="absolute left-0 xl:-left-4 bottom-1/3 hidden lg:block">
      <div class="bg-white rounded-2xl shadow-xl p-4 transform -rotate-3 hover:rotate-0 transition-transform duration-300">
        <div class="text-3xl font-bold text-sage-mist">30%</div>
        <div class="text-sm text-espresso/60">Carbon Reduced</div>
      </div>
    </div>
  </div>
</section>
